{
	"name": "Hacker News Scraper",
	"options": {
		"store": {
			"strategy": "disk"
		},
		"spiders": {
			"concurrency": 3,
			"limit": 5
		}
	},
	"spider": {
		"urls": [
			"https://news.ycombinator.com/news"
		],
		"links": [
			"//a[@class=\"morelink\"]/@href"
		]
	},
	"scrapers": [
		{
			"name": "Links",
			"output": "links.jsonl",
			"context": "//a[@class=\"storylink\"]",
			"fields": {
				"title": "/text()"
			},
			"transforms": [
			  "./transforms/UppercaseTitle.lua"
			]
		}
	]
}
